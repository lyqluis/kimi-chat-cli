{
	"name": "@lyqluis/kimi-chat-cli",
	"version": "0.1.0",
	"description": "Personal terminal-based chat client for Kimi AI",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=16",
		"pnpm": ">=8"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsx --watch src/cli.tsx",
		"dev-nodemon": "nodemon --watch src --exec 'tsx src/cli.tsx'",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"files": [
		"dist",
		"README.md"
	],
	"main": "./dist/cli.js",
	"module": "./dist/cli.js",
	"bin": {
		"kimi-chat": "./dist/cli.js"
	},
	"dependencies": {
		"ink": "^4.1.0",
		"ink-scroll-view": "^0.3.4",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^6.0.0",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"string-width": "^8.1.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"@vitejs/plugin-react": "^4.7.0",
		"chalk": "^5.2.0",
		"dotenv": "^17.2.3",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"tsup": "^8.5.1",
		"typescript": "^5.0.3",
		"vitest": "^4.0.17",
		"xo": "^0.53.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	}
}
